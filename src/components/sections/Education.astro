---
import Section from "@/components/Section.astro";
import { education } from "@cv";
---

<Section title="EducaciÃ³n">
  <ul class="flex gap-8 mb-8 flex-col">
    {
      education?.map(({ institution, startDate, endDate, area, studyType }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate !== null ? new Date(endDate).getFullYear() : "Actual";
        const years = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header class="flex justify-between items-start mb-1">
                <div class="">
                  <h3 class="font-medium text-[#111]">{institution}</h3>
                  <h4 class="font-normal text-[#222]">{area}</h4>
                </div>
                <time class="text-sm text-[#555] ">{years}</time>
              </header>

              <footer>
                <p>{studyType}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
