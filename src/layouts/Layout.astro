---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="font-code">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:bg-[#0F172A]">
    <slot />
  </body>
</html>

<style is:global>
  html {
    letter-spacing: -0.025em;
    background-color: white;
  }

  body,
  figure {
    padding: 0;
    margin: 0;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  *,
  *::after,
  *::before {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  .dark h1,
  .dark h2,
  .dark a {
    color: white;
  }

  .dark h3 {
    color: white;
  }

  .dark p,
  .dark h4 {
    color: #94a3b8;
  }

  .dark span,
  .dark time {
    color: #38bdf8;
  }

  @media print {
    body {
      background-color: #0f172a;
    }
  }
</style>
